@model ISAT.Business.TicketInfoList
<div class="col-lg-12 animated fadeInRight">
    <div class="mail-box-header">
        <form method="get" action="#" class="pull-right mail-search">
            <div class="input-group">
                <input type="text" class="form-control input-sm" name="search" placeholder="Search email">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Search
                    </button>
                </div>
            </div>
        </form>
        <h2>
            Inbox
        </h2>
        <div class="mail-tools tooltip-demo m-t-md">
            <div class="btn-group pull-right">
                <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>
            </div>
            <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Refresh inbox"><i class="fa fa-refresh"></i> Refresh</button>

        </div>
    </div>
    <div class="mail-box">

        <table class="table table-hover table-mail">
            <thead>
                <tr>
                    <td>Subject</td>
                    <td>Requester</td>
                    <td>CreatedDate</td>
                    <td>Bagian</td>
                    <td>TicketOwner</td>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="read">
                        <td class="mail-subject"><a href="@Url.Action("EmailView", "Ticketing")">@item.TicketSubject</a></td>
                        <td class="mail-ontact">@item.Requester</td>
                        <td class="mail-date">@item.CreatedDate</td>
                        <td class="mail-text">@item.Priority</td>
                        <td class="mail-text">@item.TicketOwner</td>
                    </tr>
                }


            </tbody>
        </table>


    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/iCheck")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

        });
    </script>
}