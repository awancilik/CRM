@model List<ISAT.Web.ViewModel.ReportVM>
@{
    ViewBag.Title = "Report";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <h1>
                   Report
                </h1>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Open Ticket</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a> 
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Ticket Subject</th>
                                    <th>Customer Name</th>
                                    <th>Requester</th>
                                    <th>Updated Date</th>
                                    <th>Bagian</th>
                                    <th>Ticket Owner</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Where(x=>x.Status=="Open"))
                                {
                                    <tr>
                                        <td><a href='@Url.Action("DisplayTicket", "Ticketing", new {ticketId=item.TicketId})'>@item.Subject</a>  </td>
                                        <td>@item.NamaCustomer</td>
                                        <td>@item.Requester</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.Priority</td>
                                        <td>@item.TicketOwner</td>
                                    </tr>
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Closed Ticket</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a> 
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example3">
                            <thead>
                                <tr>
                                    <th>Ticket Subject</th>
                                    <th>Customer Name</th>
                                    <th>Requester</th>
                                    <th>Updated Date</th>
                                    <th>Bagian</th>
                                    <th>Ticket Owner</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Where(x => x.Status == "Closed"))
                                {
                                    <tr>
                                        <td><a href='@Url.Action("DisplayTicket", "Ticketing", new {ticketId= item.TicketId})'>@item.Subject</a>  </td>
                                        <td>@item.NamaCustomer</td>
                                        <td>@item.Requester</td>
                                        <td>@item.UpdatedDate</td>
                                        <td>@item.Priority</td>
                                        <td>@item.TicketOwner</td>
                                    </tr>
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Open Ticket' },
                    { extend: 'pdf', title: 'Open Ticket' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ],
                order: false
            });

            $('.dataTables-example2').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'ExampleFile' },
                    { extend: 'pdf', title: 'ExampleFile' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ],
                order: false
            });

            $('.dataTables-example3').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Closed Ticket' },
                    { extend: 'pdf', title: 'Closed Ticket' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ],
                order: false
            });
        });
    </script>
}