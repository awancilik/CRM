@model List<ISAT.Web.ViewModel.CustomerProfile>
@{
    ViewBag.Title = "Customer Profile";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    @foreach (var item in Model.Where(x => x.FirstName != " "))
                    {
                        <h1>@item.FirstName</h1>
                        <br />
                        <h3>Profile</h3>
                        <br />
                        <button class="btn btn-sm btn-primary" type="submit" id="btnAddNewTicket"><strong>Add New Ticket</strong></button>
                        <button class="btn btn-sm btn-primary" type="submit" id="btnCancel"><strong>Cancel</strong></button>

                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Nama :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.FirstName &nbsp; @item.LastName</label></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Email :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.Email</label></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Phone Number :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.Custno</label></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Company Name :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.CompanyName</label></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Created Date :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.CreatedDate</label></div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Created By :</label>
                                    <div class="col-sm-2"><label class="control-label">@item.CreatedBy</label></div>
                                </div>
                            </div>
                        </div>
                        break;
                    }
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="text-center m-t-lg">
                    <h1>
                        Open Tickets
                    </h1>
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Ticket Subject</th>
                                        <th>Requester</th>
                                        <th>Updated Date</th>
                                        <th>Bagian</th>
                                        <th>Ticket Owner</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(x => x.Status == "Open"))
                                    {
                                        <tr>
                                            <td><a href='@Url.Action("DisplayTicket", "Ticketing", new {ticketId=item.TicketId})'>@item.Subject</a>  </td>
                                            <td>@item.Requester</td>
                                            <td>@item.UpdatedDate</td>
                                            <td>@item.Priority</td>
                                            <td>@item.TicketOwner</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="text-center m-t-lg">
                    <h1>
                        Closed Tickets
                    </h1>
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Closed Ticket</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <table class="table table-striped table-bordered table-hover dataTables-example3">
                                <thead>
                                    <tr>
                                        <th>Ticket Subject</th>
                                        <th>Requester</th>
                                        <th>Updated Date</th>
                                        <th>Bagian</th>
                                        <th>Ticket Owner</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Where(x => x.Status == "Closed"))
                                    {
                                        <tr>
                                            <td><a href='@Url.Action("DisplayTicket", "Ticketing", new {ticketId= item.TicketId})'>@item.Subject</a>  </td>
                                            <td>@item.Requester</td>
                                            <td>@item.UpdatedDate</td>
                                            <td>@item.Priority</td>
                                            <td>@item.TicketOwner</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

