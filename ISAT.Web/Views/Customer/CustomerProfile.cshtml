    @section Styles {
        @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    }

                        @section Scripts {
                            @Scripts.Render("~/plugins/dataTables")

                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $('.dataTables-example').DataTable({
                                        pageLength: 10,
                                        dom: '<"html5buttons"B>lTfgitp',
                                        buttons: [
                                            { extend: 'copy' },
                                            { extend: 'csv' },
                                            { extend: 'excel', title: 'Inbox Open Ticket' },
                                            { extend: 'pdf', title: 'Inbox Open Ticket' },
                                            {
                                                extend: 'print',
                                                customize: function (win) {
                                                    $(win.document.body).addClass('white-bg');
                                                    $(win.document.body).css('font-size', '10px');

                                                    $(win.document.body).find('table')
                                                            .addClass('compact')
                                                            .css('font-size', 'inherit');
                                                }
                                            }
                                        ],
                                        order: [[2, 'desc']]
                                    });

                                    $('#btnAddNewTicket').click(function () {
                                        window.location.href = '@Url.Action("Index", "Ticketing")';
                                    });

                                    $('#btnCancel').click(function () {
                                        window.location.href = '@Url.Action("IndexCustomer", "Customer")';
                                    });


                                    $('.dataTables-history').DataTable({
                                        pageLength: 10,
                                        dom: '<"html5buttons"B>lTfgitp',
                                        buttons: [
                                            { extend: 'copy' },
                                            { extend: 'csv' },
                                            { extend: 'excel', title: ' TicketOwner' },
                                            { extend: 'pdf', title: 'Solution' },
                                            {
                                                extend: 'print',
                                                customize: function (win) {
                                                    $(win.document.body).addClass('white-bg');
                                                    $(win.document.body).css('font-size', '10px');

                                                    $(win.document.body).find('table')
                                                            .addClass('compact')
                                                            .css('font-size', 'inherit');
                                                }
                                            }
                                        ],
                                        order: [[2, 'desc']]
                                    });
                                });
                            </script>
                        }