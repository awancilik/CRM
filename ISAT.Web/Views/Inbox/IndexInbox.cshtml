@{
    ViewBag.Title = "Minor";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
                <h1>
                    My Open Tickets
                </h1>
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="button" id="btnCreateTicket"><strong>Create Ticket</strong></button></h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>Ticket Subject</th>
                                    <th>Customer Name</th>
                                    <th>Requester</th>
                                    <th>Created Date</th>
                                    <th>Bagian</th>
                                    <th>Ticket Owner</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in ViewBag.TicketInfoList)
                                    {
                                        <tr>
                                            <td><a href='@Url.Action("OpenTicket","Ticketing", new { id = item.TicketNo })'>@item.TicketSubject</a> </td>
                                            <td>@item.NamaCustomer</td>
                                            <td>@item.Requester</td>
                                            <td>@item.CreatedDate.ToString("dd MMM yyyy HH':'mm")</td>
                                            <td>@item.Priority</td>
                                            <td>@item.TicketOwner</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.dataTables-example').DataTable({
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Inbox Open Ticket' },
                    { extend: 'pdf', title: 'Inbox Open Ticket' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                        }
                    }
                ],
                order: false
            });

            $('#btnCreateTicket').click(function () {
                window.location.href = '@Url.Action("Index", "Ticketing")';
            });
        });
    </script>
}